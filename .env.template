# Database Configuration
DATABASE_URL=postgresql://gator_user:password@localhost:5432/gator_dev
DATABASE_TEST_URL=postgresql://gator_user:password@localhost:5432/gator_test
REDIS_URL=redis://localhost:6379/0

# AI Model Configuration
AI_MODEL_PATH=/models
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
HUGGING_FACE_TOKEN=your_hugging_face_token_here
STABLE_DIFFUSION_MODEL=runwayml/stable-diffusion-v1-5
CONTENT_MODERATION_MODEL=microsoft/DialoGPT-medium

# GPU Configuration (ROCm)
# Auto-detected by default, but can be manually configured
# For ROCm 6.5+ with V620/RDNA2 or newer GPUs
ROCM_PATH=/opt/rocm
HIP_PATH=/opt/rocm/hip
# Multi-GPU: Set visible devices (e.g., 0,1 for 2 GPUs, 0,1,2 for 3 GPUs)
HIP_VISIBLE_DEVICES=0,1
ROCR_VISIBLE_DEVICES=0,1
# GPU Architecture (auto-detected, manual override for advanced users)
# gfx1030 for V620/RDNA2, gfx900 for MI25/Vega, gfx90a for MI210/MI250
# HSA_OVERRIDE_GFX_VERSION=10.3.0
# PYTORCH_ROCM_ARCH=gfx1030
# Performance tuning for multi-GPU
GPU_MAX_ALLOC_PERCENT=100
GPU_MAX_HEAP_SIZE=100
HSA_ENABLE_SDMA=0
NCCL_IB_DISABLE=1
HIP_FORCE_DEV_KERNARG=1

# Social Media APIs (Use sandbox/test credentials)
FACEBOOK_API_KEY=your_facebook_api_key
FACEBOOK_API_SECRET=your_facebook_api_secret
INSTAGRAM_API_KEY=your_instagram_api_key
INSTAGRAM_API_SECRET=your_instagram_api_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Security Configuration
SECRET_KEY=your_super_secret_key_change_in_production
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded

# Application Settings
DEBUG=true

# ====================================
# NOTE: Branding is now stored in DATABASE
# ====================================
# Site name, colors, logo, etc. are managed via:
# - API: PUT /api/v1/branding
# - UI: /admin/settings (coming soon)
# This keeps .env minimal and allows live updates without restarts
ENVIRONMENT=development
LOG_LEVEL=DEBUG
API_VERSION=v1
MAX_CONTENT_GENERATION_CONCURRENT=4
CONTENT_CACHE_TTL_SECONDS=3600

# Network Security
# ALLOWED_HOSTS: Comma-separated list of allowed host headers
# Use "*" to allow all hosts (recommended for development/internal networks)
# For production, specify exact hosts: "yourdomain.com,www.yourdomain.com"
# ALLOWED_HOSTS=*
# ALLOWED_ORIGINS: Comma-separated list of CORS allowed origins
# Use "*" to allow all origins (recommended for development)
# For production, specify exact origins: "https://yourdomain.com,https://www.yourdomain.com"
# ALLOWED_ORIGINS=*

# File Storage
UPLOAD_PATH=./uploads
GENERATED_CONTENT_PATH=./generated
MAX_FILE_SIZE_MB=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Content Moderation Thresholds
NSFW_THRESHOLD=0.8
BIAS_THRESHOLD=0.7
TOXICITY_THRESHOLD=0.8

# Infrastructure (Development)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key  
AWS_REGION=us-west-2
AWS_S3_BUCKET=gator-dev-content

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Social Media Webhook URLs
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_facebook_webhook_token
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_instagram_webhook_token

# DNS Management (GoDaddy)
GODADDY_API_KEY=your_godaddy_api_key
GODADDY_API_SECRET=your_godaddy_api_secret
GODADDY_ENVIRONMENT=production
DEFAULT_DOMAIN=your-domain.com

# Celery Task Queue Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Backup Configuration
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30
CONTENT_STORAGE_PATH=generated_content