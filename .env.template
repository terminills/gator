# File Storage
UPLOAD_PATH=./uploads
GENERATED_CONTENT_PATH=./generated
MAX_FILE_SIZE_MB=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Content Moderation Thresholds
NSFW_THRESHOLD=0.8
BIAS_THRESHOLD=0.7
TOXICITY_THRESHOLD=0.8

# Infrastructure (Development)
AWS_ACCESS_KEY_ID=your_aws_access_key
