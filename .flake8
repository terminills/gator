[flake8]
max-line-length = 88
extend-ignore = E203, E501, W503
exclude =
    .git,
    __pycache__,
    .eggs,
    *.egg,
    build,
    dist,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    # Allow unused imports in __init__.py files
    */__init__.py:F401
    # Allow underscore-prefixed unused variables in specific files
    */api/routes/*.py:F841
    */services/*.py:F841
    */utils/*.py:F841
